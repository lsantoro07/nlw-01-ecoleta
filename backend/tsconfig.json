{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": { /* Adicionar a biblioteca tsconfig-paths -D para utilizar os paths e adicionar no script dev: -r tsconfig-paths/register*/
      "@controllers/*": ["./src/controllers/*"] 
    }
  },
  "include": [
    "src/**/*"
  ]
}
